<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_backgroud"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <include layout="@layout/title_info" />

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/line_center"
            android:layout_width="0.1dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@color/line_view" />

        <LinearLayout
            android:id="@+id/ll_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="35dp"
            android:layout_toLeftOf="@id/line_center"
            android:orientation="vertical">

            <CheckBox
                android:button="@null"
                android:id="@+id/ib_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_boy"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="男" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="35dp"
            android:layout_toRightOf="@id/line_center"
            android:orientation="vertical">

            <CheckBox
                android:button="@null"
                android:id="@+id/ib_gril"
                android:background="@drawable/selector_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="女" />
        </LinearLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/bt_ok_sex"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="13.3sp"
        android:background="@drawable/em_button_login_bg"
        />
</LinearLayout>
