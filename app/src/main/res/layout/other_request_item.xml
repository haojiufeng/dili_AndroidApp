<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <com.diligroup.view.CheckableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
      >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/iv_shutiao" />

        <TextView
            android:id="@+id/tv_noeat_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_noeat_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/checked_selector"
            android:button="@null"
            android:clickable="false" />
    </com.diligroup.view.CheckableFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/line_view" />
        <include
            layout="@layout/pop_jianzhi" />
        <TextView
            android:id="@+id/tv_zengji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="饮食方面要注意三餐定时定量，每天可增加100-300Kcal的能量摄入，适当增加蛋白质摄入比例，同时要进行适当的体育锻炼，以避免增加的能量转化为脂肪增加身体患病分险。"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>