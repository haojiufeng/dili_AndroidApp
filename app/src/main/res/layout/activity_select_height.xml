<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_backgroud"
    android:orientation="vertical"
    >

    <include layout="@layout/comm_title" />
<include layout="@layout/title_info"/>

    <com.diligroup.view.wheelview.WheelView_1
        android:id="@+id/wv_height"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/white"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/bt_ok_height"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="34dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="13.3sp"
            android:background="@drawable/em_button_login_bg"
            />
    </LinearLayout>
</LinearLayout>
